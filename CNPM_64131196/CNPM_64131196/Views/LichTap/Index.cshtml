
@{
    ViewBag.Title = "Lịch của bạn";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    int idKH = ViewBag.idKH;
}

<input type="hidden" value="@idKH" id="id_user"/>
<div id="load_lichkhach">
    @Html.Action("PartTial_LichCuaKhach", "LichTap", new { idKH = idKH })
</div>


<div class="modal fade" id="confirmModalXoaLich" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <input type="hidden" id="LichCuaKhach" value="0" />
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                @*<i class="fas fa-exclamation-triangle warning-icon"></i>*@ <i class="fas fa-question-circle warning-icon"></i>
                <p class="mb-0 modal-title">Bạn có chắc muốn xóa/hủy lịch này?</p>
                @*<span class="modal-title">Thứ: </span>
                <span id="txtThu" class="me-5 mt-1 modal-title"></span>
                <span class="modal-title ms-6">Ngày: </span>
                <span id="txtNgayTap" class="mt-1 modal-title"></span>
                <p class="modal-title">Giờ: <span id="txtGioBatDau" class="me-1"></span>-<span id="txtGioKetThuc" class="ms-1"></span></p>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Để nghĩ lại
                </button>
                <button type="button" class="btn btn-danger btnXacNhanXoaLich">
                    <i class="fas fa-check me-2"></i>Chắc chắn rồi @*<i class="fa-solid fa-check"></i>*@
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="statusErrorsModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body text-center p-lg-4">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 130.2 130.2">
                    <circle class="path circle" fill="none" stroke="#db3646" stroke-width="6" stroke-miterlimit="10" cx="65.1" cy="65.1" r="62.1" />
                    <line class="path line" fill="none" stroke="#db3646" stroke-width="6" stroke-linecap="round" stroke-miterlimit="10" x1="34.4" y1="37.9" x2="95.8" y2="92.3" />
                    <line class="path line" fill="none" stroke="#db3646" stroke-width="6" stroke-linecap="round" stroke-miterlimit="10" x1="95.8" y1="38" x2="34.4" y2="92.2" />
                </svg>
                <h4 class="text-danger mt-3" id="txtError"></h4>
                <p class="mt-3" ></p>
                <button type="button" class="btn btn-sm mt-3 btn-danger" data-bs-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="statusSuccessModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body text-center p-lg-4">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 130.2 130.2">
                    <circle class="path circle" fill="none" stroke="#198754" stroke-width="6" stroke-miterlimit="10" cx="65.1" cy="65.1" r="62.1" />
                    <polyline class="path check" fill="none" stroke="#198754" stroke-width="6" stroke-linecap="round" stroke-miterlimit="10" points="100.2,40.2 51.5,88.8 29.8,67.5 " />
                </svg>
                <h4 class="text-success mt-3" id="txtSuccess"></h4>
                <button type="button" class="btn btn-sm mt-3 btn-success" data-bs-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>